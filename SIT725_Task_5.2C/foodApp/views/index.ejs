<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Food Menu</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <h1>Food Menu</h1>

    <!-- Display the list of food items -->
    <ul>
      <% foods.forEach(food => { %>
      <li>
        <strong><%= food.name %></strong>: <%= food.price %>
        <a href="/editFood/<%= food._id %>">Edit</a>
        <a href="/deleteFood/<%= food._id %>">Delete</a>
      </li>
      <% }) %>
    </ul>

    <a href="/addFood">Add New Food Item</a>
  </body>
</html>
